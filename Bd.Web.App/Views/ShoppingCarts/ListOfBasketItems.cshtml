@model IEnumerable<Bd.Web.App.Models.OrderItemViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = "_Layout";
    ViewData["Title"] = "ListOfBasketItems";
}


@{ 
    foreach (var item in Model)
    {
        @Html.Hidden("UriKey")
    }
}

<h2>Deals on wheel order items</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalQuantityPrice)
            </th>

            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantityPrice)
            </td>



            <td>
                <a asp-action="AddSameItemOnceToBasket" asp-route-id="@item.UriKey",  asp-route-type="@item.ProductType" class="btn btn-primary">Add</a>
            </td>
            <td>
                <a asp-action="RemoveSameItemOnceFromBasket" asp-route-id="@item.UriKey", asp-route-type="@item.ProductType" class="btn btn-primary">Remove</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.UriKey"  asp-route-type="@item.ProductType" class="btn btn-primary">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ConfirmOrder"  class="btn btn-primary">Confirm Order</a>
</div>
<br />
<div>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Back to Products</a>
</div>