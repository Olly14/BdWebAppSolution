@model IEnumerable<Bd.Web.App.Models.OrderItemViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    foreach (var item in Model)
    {
        @Html.Hidden("UriKey")
    }
}

@{
    ViewData["Title"] = "List of Order items";
}
@{
    if (!string.IsNullOrWhiteSpace(@ViewBag.Owner))
    {
        <h2>Owner: @ViewBag.Owner</h2>
    }
    else { <h2>List of Order items</h2>}
}


<hr />
<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalQuantityPrice)
            </th>

            @*<th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>*@


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalQuantityPrice)
                </td>

                @*<td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>*@


                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.UriKey" class="btn btn-primary">Edit</a>
                </td>*@
                <td>
                    <a asp-action="Details" asp-route-id="@item.UriKey" class="btn btn-primary">Details</a>
                </td>
                @*<td>
                    <a asp-action="Delete" asp-route-id="@item.UriKey" class="btn btn-primary">Delete</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>
